@model RegisterViewModel
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                <form method="post" class="mx-1 mx-md-4">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Name" class="form-control" />
                                            <label class="form-label" asp-for="Name"></label>
                                        </div>
                                        <span class="text text-danger" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Surname" class="form-control" />
                                            <label class="form-label" asp-for="Surname"></label>
                                        </div>
                                        <span class="text text-danger" asp-validation-for="Surname"></span>

                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" class="form-control" />
                                            <label class="form-label" asp-for="Email"></label>
                                        </div>
                                        <span class="text text-danger" asp-validation-for="Email"></span>

                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="UserName" class="form-control" />
                                            <label class="form-label" asp-for="UserName"></label>
                                        </div>
                                        <span class="text text-danger" asp-validation-for="UserName"></span>

                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" class="form-control" />
                                            <label class="form-label" asp-for="Password"></label>
                                        </div>
                                        <span class="text text-danger" asp-validation-for="Password"></span>

                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="ConfirmPassword" class="form-control" />
                                            <label class="form-label" asp-for="ConfirmPassword"></label>

                                        </div>
                                        <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>

                                    </div>



                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" asp-for="IsTerms" />
                                        <label class="form-check-label" asp-for="IsTerms">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                        <span class="text text-danger" asp-validation-for="IsTerms"></span>

                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>