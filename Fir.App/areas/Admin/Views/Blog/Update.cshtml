@model Blog

<div class="container">
	<form method="post">
		<div class="form-group">
			<label asp-for="@Model.Title" >Title:</label>
			<input type="text" class="form-control" asp-for="@Model.Title"/>
			
		</div>
			<div class="form-group">
			<label asp-for="@Model.Description" >Desc:</label>
			<input type="text" class="form-control" asp-for="@Model.Description"/>
		
		</div>
			<div class="form-group">
			<label asp-for="@Model.FormFile" >Image:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile"/>
		</div>
		<img style="width:100px;height:100px" src="~/assets/images/@Model.Image" />
			@Html.AntiForgeryToken()
	<button type="submit">Update</button>
	</form>
</div>
